<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prem.alarmapp">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.prem.alarmapp.ui.AlarmApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/DarkMode">
        <activity android:name="com.prem.alarmapp.ui.CreateAlarmActivity"
            android:theme="@style/DarkMode">
        </activity>
        <activity android:name="com.prem.alarmapp.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.prem.alarmapp.service.Alarmservice" />

        <receiver android:name="com.prem.alarmapp.receiver.AlarmReceiver" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>